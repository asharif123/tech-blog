<div class="">
    <form class="post-data">
        <div class="col-12 col-xl-3 col-md-5 p-5">
            <div class="card h-100">
                <div class="form-group">
                    <label for="post-title">Title:</label>
                    <textarea class="form-control" rows="1" id="post-title"></textarea>
                </div>      
            </div>
            <div class="py-3 card h-100">
                <div class="form-group">
                    <label for="post-content">Post:</label>
                    <textarea class="form-control" rows="10" id="post-content"></textarea>
                </div>      
            </div>
            <button type="submit" class="btn btn-success">Post</button>

        </div>
    </form>
    {{#each projects as |project| }}
        <div class="row mb-4 project">
            <div class="col-md-5">
                <h2>
                <!-- Call helper function with triple brackets to render the emoji span as HTML -->
                {{{get_emoji}}}
                <a href="/project/{{project.id}}">{{project.name}}</a>
                </h2>
                <p>
                <span for="img" aria-label="money">ðŸ’²</span>
                <!-- Pass needed_funding value to the helper function -->
                <span class="dollar-amount">{{format_amount project.needed_funding}}</span>
                needed!
                </p>
                <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
            </div>
            <div class="col-md-7">
                <p>
                {{project.description}}
                </p>
            </div>
        </div>
    {{/each}}
</div>
<script src="/js/submit-post.js"></script>
